Doctype 
html(lang="en")
  head
    meta(charset="UTF-8")
    title Feeds Request Form
    link(
      rel="stylesheet" 
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css"
      )
    link(
      href="/custReg.css" 
      rel="stylesheet"
      )
  body
    // Navbar
    nav.navbar.navbar-expand-lg.navbar-dark.bg-success.sticky-top
      .container-fluid
        a.navbar-brand.fw-bold(href="#") üê• Young4ChickS
        button.navbar-toggler(type="button", data-bs-toggle="collapse", data-bs-target="#navbarNav")
          span.navbar-toggler-icon
        #navbarNav.collapse.navbar-collapse
          ul.navbar-nav.ms-auto
            li.nav-item
              a.nav-link(href="") Dashboard
            li.nav-item
              a.nav-link.active(href="/feedsrequest") Request Feeds
            li.nav-item
              a.nav-link(href="/chickrequest") Request Chicks
            li.nav-item
              a.nav-link(href="", onclick="logout()") Logout
    //form          
    .form-wrapper
      h2.form-title.text-center Feeds Stock Request Form
      p.form-label.mb-4
        | Kindly fill in this form to request poultry feeds. Each bag is 50kgs and payment is due within 2 months of
        |   delivery.
        |   Starter farmers are encouraged to order responsibly.
      form#feedsForm(action="/feedsrequest" method="POST")
        // Farmer Info
        .mb-3
          label.form-label(for="farmerName") Farmer Name
          input#farmerName.form-control( 
            name="farmerName"
            required="" 
            type="text"
            )
        .mb-3
          label.form-label(for="farmerPhone") Phone Number
          input#farmerPhone.form-control(
            name="farmerPhone"
            required="" 
            type="tel"
            )
        // Feed Details
        .mb-3
          label.form-label(for="feedType") Type of Feed
          select#feedType.form-select(name="feedType" required="")
            option(value="") Select Feed Type--
            option(value="Starter") Starter
            option(value="Grower") Grower
            option(value="Finisher") Finisher
            option(value="Layer Mash") Layer Mash
        .mb-3
          label.form-label(for="quantity") Quantity (Number of 50kg Bags)
          input#quantity.form-control(
            name="quantity"
            required="" 
            max="2" 
            min="1" 
            type="number"
            )
        // Unit Cost
        .mb-3
          label.form-label(for="unitCost") Unit Cost (per 50kg bag)
          input#unitCost.form-control(
            name="unitCost"
            readonly="" 
            value="100000" 
            type="number"
            )
        // Total Cost display
        .mb-3
        label.form-label(for="totalCostDisplay") Total Cost
        input#totalCostDisplay.form-control(type="text" readonly="")
        // order date
        .mb-3
          label.form-label(for="requestDate") Date of Request
          input#requestDate.form-control(
            name="requestDate"
            required="" 
            type="date"
            )
        // Payment
        .mb-3
          label.form-label(for="paymentMethod") Preferred Payment Method
          select#paymentMethod.form-select( name="paymentMethod" required="")
            option(value="") Select Payment Method--
            option(value="Mobile Money") Mobile Money
            option(value="Bank Transfer") Bank Transfer
            option(value="Cash on Delivery") Cash on pickup 
        .d-grid
          button.btn.btn-success(type="submit") Submit Request
        p#resultMessage.mt-3.text-success.text-center.fw-bold
    script(src="feeds.js")